

{% extends 'base.html.twig' %}



 {% block title %} Formulario de Registro {% endblock %}


{% block body %}

<header>

        <nav id="nav" class="nav1">
            <div class="contenedor-nav">

                <div class="enlaces" id="enlaces">
                    <a href="{{ app.request.getBaseURL() }}" class="btn-header">Home</a>
                    </div>
                     </div>
                    </nav>
                    </header>

	<div class="container">
		<form action="success" method="POST" class="login-email">
            <p class="login-text" style="font-size: 2rem; font-weight: 800;">Registro</p>
            <p class="login-register-text">Ha ocurrido un error en el registro</p>
            <p class="login-register-text">por favor verifique sus datos</p>
			<div class="input-group">
				<input type="text" placeholder="nombre" name="username"  required>
			</div>
			<div class="input-group">
				<input type="email" placeholder="correo" name="email"  required>
			</div>
			<div class="input-group">
				<input type="number" placeholder="telefono" name="telefono" required>
			</div>
			<div class="input-group">
				<input type="password" placeholder="contraseña" name="password"  required>
            </div>
            <div class="input-group">
				<input type="password" placeholder="confirmar contraseña" name="cpassword"  required>
			</div>
			<div class="input-group">
				<button class="btn">Registrar</button>
			</div>
			<p class="login-register-text">Ya tienes una cuenta? <a href="{{ app.request.getBaseURL() }}/login">Entre aquí</a>.</p>
		</form>
	</div>
     {% endblock %}



