
{% extends 'base.html.twig' %}



 {% block title %} Formulario de Acceso {% endblock %}

{% block body %}
<header>

        <nav id="nav" class="nav1">
            <div class="contenedor-nav">

                <div class="enlaces" id="enlaces">
                    <a href="{{ app.request.getBaseURL() }}" class="btn-header">Home</a>
                    </div>
                     </div>
                    </nav>
                    </header>

          <div class="container">
		<form action="login-process" method="POST" class="login-email">
			<p class="login-text" style="font-size: 2rem; font-weight: 800;">Acceso</p>
			<div class="input-group">
				<input type="email" placeholder="correo" name="email"  required>
			</div>
			<div class="input-group">
				<input type="password" placeholder="contraseña" name="password"  required>
			</div>
			<div class="input-group">
				<button name="submit" class="btn">Enviar</button>
			</div>
			<p class="login-register-text">No tienes una cuenta? <a href="{{ app.request.getBaseURL() }}/signup">Registrate aquí</a>.</p>
		</form>
	</div>
	
     {% endblock %}




